<h1>Taskly Lists</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
    <tr>
    <td>Name</td>
    </tr>
    <% @tasks.each do |tasks| %>
    <tr>

    <td><%= task.task %></td>
    <td><%= task.due_date %></td>

    </tbody>
    </table>
    <br>
    <br>

    <% if @user %>
    <p>
    <%= link_to "Back to profile", user_path(@user), {:class => "btn btn-primary"} %>
    </p>
    <% else %>
    <p><%= link_to "New Task", new_task_path %></p>
    <% end %>
